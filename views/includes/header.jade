#sp-header.sp-header-container(ng-controller='headerCtrl as vm')
  .sp-header-wrapper
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation' ng-class='{ "navbar-transparent": vm.navTransparent }')
      .container(ng-class='{ "explanded": vm.explanded }')
        .navbar-header
          a.navbar-brand SugerPocket
          button.sp-side-ctrl.navbar-toggle.collapse(ng-click='vm.toggleSideMenu()')
            span.sr-only side menu toggle
            span.icon-bar
            span.icon-bar
            span.icon-bar
          .user-ctrls.navbar-right(ng-show='vm.isLogin')
            a.navbar-brand(href='#' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') {{ vm.nickname }}
            ul.dropdown-menu(role='menu' aria-labelledby="authMenu")
              li.dropdown-header(role="presentation") User
              li
                a(href='#' ng-click='vm.logout()') Log out
          .auth-ctrls.btn-group.navbar-right(ng-show='!vm.isLogin')
            button.btn.sp-navbar-button(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              span.glyphicon.glyphicon-user
              span.caret
            ul.dropdown-menu(role='menu' aria-labelledby="authMenu")
              li.dropdown-header(role="presentation") Auth
              li
                a(href='#' ng-click='vm.openAuthModal("login")' data-toggle='modal' data-target='#sp-auth') Sign in
              li
                a(href='#' ng-click='vm.openAuthModal("register")' data-toggle='modal' data-target='#sp-auth') Sign up 
            
            