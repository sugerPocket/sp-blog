#sp-assignment-list.sp-assignment-list-container(ng-controller='assignmentListCtrl as vm')
  .sp-assignment-list-wrapper.container
    .assignment-list-header
    .assignment-list-body
      .assignment-list.row
        .list-item-wrapper.col-xs-12.col-md-4.col-sm-6
          .list-item
            .list-item-meta.clearfix
              h4.title.pull-left test
              h6.week.pull-right Week 1
            .list-item-img
            .author-meta
              img.img-responsive.minihead(ng-src='/images/blog-header.jpg')
              span.author-name sugerpocket
            .ddl.clearfix
              h5.start.pull-left start at
              h5.end.pull-right End at 
    .assignment-list-footer
      textarea(sp-mde ng-model='vm.editorContent')